{
    "name": "splot/framework",
    "description": "Splot Framework. Lightweight, fully featured framework for rapid web development.",
    "keywords": ["rapid", "fast", "lightweight", "web", "event", "di", "dependency injection", "mvc"],
    "license": "MIT",
    "authors": [
        {
            "name": "Michał Pałys-Dudek",
            "email": "michal@michaldudek.pl"
        }
    ],
    "require": {
        "php": ">=5.3.3",
        "psr/log": ">=1.0,<2.0",
        "symfony/http-foundation": ">=2.1,<3.0",
        "symfony/filesystem": ">=2.1,<3.0",
        "symfony/console": ">=2.1,<3.0",
        "symfony/process": ">=2.1,<3.0",
        "symfony/yaml": ">=2.1,<3.0",
        "filp/whoops": "~1.1",
        "michaldudek/foundation": ">=0.9",
        "michaldudek/clog": "dev-master",
        "splot/di": "0.9.*",
        "splot/event-manager": ">=1.0,<2.0",
        "splot/cache": "0.9.*"
    },
    "require-dev": {
        "phpunit/phpunit": "~5.0"
    },
    "extra": {
        "branch-alias": {
            "dev-release/0.9-beta": "0.9.x-dev"
        }
    },
    "autoload": {
    	"psr-4": {
            "Splot\\Framework\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Splot\\Framework\\Tests\\": "tests/"
        }
    }
}
